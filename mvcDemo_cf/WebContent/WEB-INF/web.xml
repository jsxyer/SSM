<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>myBatis_java_cf</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- 配置传输编码为utf-8，解决中文乱码问题 -->
	<filter>
		<filter-name>character</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>character</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- 添加SpringMVC框架的启动，配置前端控制器 -->
	<servlet>
		<servlet-name>springMVC</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<!-- 当配置文件不在默认路径下，则需要指定配置文件的路径 -->
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:config/springMVC-servlet.xml</param-value>
		</init-param>
	
		<!-- Servlet启动是第一次访问时创建，但是DispatcherServlet需要在项目启动就需要启动
			<load-on-startup>1</load-on-startup> 表示这个Servlet随项目启动而启动
		 -->
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>springMVC</servlet-name>
		<!-- /:表示拦截到所有的请求，包括静态资源，错误的用法：/*,*.do -->
		<url-pattern>/</url-pattern>
	</servlet-mapping>

</web-app>